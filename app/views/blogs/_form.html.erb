<%= form_for(blog) do |f| %>
  <% if blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(blog.errors.count, "error") %> prohibited this blog from being saved:</h2>

      <ul>
      <% blog.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
<% end %>


    <div class="row control-group">
         <div class="form-group col-xs-12 floating-label-form-group controls">
           <%= f.label :title%>
           <%= f.text_field :title, class:"form-control", placeholder: "Title"%>
         </div>
    </div>

    <div class="row control-group">
         <div class="form-group col-xs-12 floating-label-form-group controls">
           <%= f.label :summary%>
           <%= f.text_field :summary, class:"form-control", placeholder: "Summary"%>
         </div>
    </div>

    <div class="row control-group">
         <div class="form-group col-xs-12 floating-label-form-group controls">
           <%= f.label :content%>
           <%= f.text_area  :content, class:"form-control", placeholder: "Content", rows:10 %>
         </div>
    </div>
    <div class="row control-group">
         <div class="form-group col-xs-12 floating-label-form-group controls">
         <p style="font-size: 20px;color: grey">Authors</p>
          <%= f.select("user_id", User.all.collect {|p| [ p.name, p.id ] }, {}, { :class => 'form-control' }) %>
         </div>
    </div>
    <div class="actions form col-md-11 col-sm-11">
      <%= f.button :submit => "", class:"btn btn-default center-block" %>
</div>
<% end %>
